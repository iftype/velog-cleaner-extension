{
  "manifest_version": 3,
  "name": "Velog Cleaner",
  "version": "1.0",
  "description": "Velog에서 스팸 게시물을 자동으로 숨겨줍니다.",
  "permissions": ["storage"],
  "host_permissions": ["https://velog.io/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://velog.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
